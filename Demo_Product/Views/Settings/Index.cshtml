@model Demo_Product.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil Düzenle</h1>
<form method="post">
    @Html.Label("Ad")
    <input type="text" asp-for="Name" class="form-control" />

    @Html.Label("SoyAd")
    <input type="text" asp-for="SurName" class="form-control" />

    @Html.Label("Mail")
    <input type="text" asp-for="Email" class="form-control" />

    @Html.Label("Cinsiye")
    <input type="text" asp-for="Gender" class="form-control" />

    @Html.Label("Şifre")
    <input type="text" asp-for="Password" class="form-control" />

    @Html.Label("Şifre tekrar")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />

    <button class="btn btn-primary">Kaydet</button>
</form>

